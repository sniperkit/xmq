{
    "mounts": {
        "rw": [
            ["~/projects/cache", "~"],
            ["~/.emacs.d",       "~/.emacs.d"],
            [".",                "."]
        ],
        "ro": [
            ["~/.bashrc",        "~/.bashrc"],
            ["~/.profile",       "~/.profile"],
            ["~/.config/fish",   "~/.config/fish"],
            ["~/.config/xonsh",  "~/.config/xonsh"],
            ["~/.xonshrc",       "~/.xonshrc"],
            ["~/.gitconfig",     "~/.gitconfig"]
        ]
    },
    "environment": {
        "PATH":     "$HOME/.local/bin:$HOME/projects/bin:$PATH",
        "NIX_PATH": "$NIX_PATH",
        "GOPATH":   "$HOME/projects",
        "TERM":     "screen-256color"
    }
}
